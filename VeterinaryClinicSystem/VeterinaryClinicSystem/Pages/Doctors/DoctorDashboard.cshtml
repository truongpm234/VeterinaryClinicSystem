@page
@model VeterinaryClinicSystem.Pages.Doctor.DoctorDashboardModel


<h2>Lịch hẹn hôm nay</h2>
<table class="table">
    <thead>
        <tr>
            <th>Giờ hẹn</th>
            <th>Bệnh nhân</th>
            <th>Lý do</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TodayAppointments)
        {
            <tr>
                <td>@item.AppointmentTime</td>
                <td>@item.PatientName</td>
                <td>@item.Reason</td>
            </tr>
        }
    </tbody>
</table>

<h2>Ca bệnh đang theo dõi</h2>
<table class="table">
    <thead>
        <tr>
            <th>Bệnh nhân</th>
            <th>Chẩn đoán</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OngoingCases)
        {
            <tr>
                <td>@item.PatientName</td>
                <td>@item.Diagnosis</td>
            </tr>
        }
    </tbody>
</table>
