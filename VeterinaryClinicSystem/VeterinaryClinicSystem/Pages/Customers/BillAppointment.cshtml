@page
@model VeterinaryClinicSystem.Pages.Customers.BillAppointmentModel

<div class="container my-4">
    <div class="card shadow-sm border-primary">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">💳 Hóa đơn thanh toán</h5>
            <span class="badge bg-light text-primary">Mã lịch hẹn: @Model.AppointmentId</span>
        </div>
        <div class="card-body">
            <h6 class="text-primary">📦 Chi tiết thuốc kê đơn:</h6>
            @if (Model.Medications.Any())
            {
                <table class="table table-bordered table-sm">
                    <thead class="table-light">
                        <tr>
                            <th>Tên thuốc</th>
                            <th>Đơn giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var med in Model.Medications)
                        {
                            <tr>
                                <td>@med.MedicationName</td>
                                <td>@med.UnitPrice.ToString("N0") VNĐ</td>
                                <td>@med.Amount</td>
                                <td>@med.Total.ToString("N0") VNĐ</td>
                            </tr>
                        }
                        <tr class="fw-bold">
                            <td colspan="3" class="text-end">Tổng tiền thuốc:</td>
                            <td>@Model.MedicationTotal.ToString("N0") VNĐ</td>
                        </tr>
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">Không có thuốc nào được kê.</p>
            }

            <hr />

            <p class="fs-5">
                🩺 Phí dịch vụ: <strong>@Model.ServicePrice.ToString("N0") VNĐ</strong>
            </p>

            <p class="fs-4 mt-3">
                💰 <strong>Tổng cộng: <span class="text-success">@Model.Total.ToString("N0") VNĐ</span></strong>
            </p>

            <p class="text-muted mb-0">(*) Bao gồm chi phí khám và thuốc.</p>
        </div>
    </div>
</div>
