@page
@model VeterinaryClinicSystem.Pages.Profile.ProfileModel
@{
    ViewData["Title"] = "Your Profile";
}

<h2>Profile Information</h2>

@if (!string.IsNullOrEmpty(Model.User.AvatarUrl))
{
    <img src="@Model.User.AvatarUrl" alt="Avatar" style="max-width: 150px;" class="mt-3" />
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

<form method="post">
    <input type="hidden" asp-for="User.UserId" />
    <div class="form-group">
        <label asp-for="User.FullName"></label>
        <input asp-for="User.FullName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.Email"></label>
        <input asp-for="User.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.PhoneNumber"></label>
        <input asp-for="User.PhoneNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.Address"></label>
        <input asp-for="User.Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="User.AvatarUrl">Avatar URL</label>
        <input asp-for="User.AvatarUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label>Role</label>
        <input value="@Model.User.Role?.RoleName" class="form-control" readonly />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Update</button>
</form>
