@page
@model VeterinaryClinicSystem.Pages.Pets.EditModel
@{
    ViewData["Title"] = "Edit Pet";
}

<h1>Edit Pet</h1>

<form method="post">
    <input type="hidden" asp-for="Pet.PetId" />

    <div class="form-group">
        <label asp-for="Pet.Name"></label>
        <input asp-for="Pet.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pet.Species"></label>
        <input asp-for="Pet.Species" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pet.Breed"></label>
        <input asp-for="Pet.Breed" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pet.Gender"></label>
        <input asp-for="Pet.Gender" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pet.BirthDate"></label>
        <input asp-for="Pet.BirthDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pet.Weight"></label>
        <input asp-for="Pet.Weight" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pet.Note"></label>
        <textarea asp-for="Pet.Note" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</form>