@page
@model VeterinaryClinicSystem.Pages.Customers.CreateAppointmentModel
@{
    ViewData["Title"] = "Tạo lịch hẹn";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form method="post">
    <div class="form-group">
        <label asp-for="Appointment.DoctorId">Bác sĩ</label>
        <select asp-for="Appointment.DoctorId" class="form-control" asp-items="Model.DoctorList">
            <option value="">-- Chọn bác sĩ --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Appointment.OwnerId">Chủ nuôi</label>
        <select asp-for="Appointment.OwnerId" class="form-control" asp-items="Model.OwnerList">
            <option value="">-- Chọn chủ nuôi --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Appointment.AppointmentDate">Thời gian hẹn</label>
        <input asp-for="Appointment.AppointmentDate" type="datetime-local" step="60" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Đặt lịch</button>
</form>
