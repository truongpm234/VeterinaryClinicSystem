@page "{appointmentId:int}/{petId:int}"
@model VeterinaryClinicSystem.Pages.MedicalRecords.CreateModel
@{
    ViewData["Title"] = "Tạo hồ sơ bệnh án";
}

<h2>@ViewData["Title"]</h2>
<p><strong>Thú cưng:</strong> @Model.PetName</p>

<form method="post">
    <input type="hidden" asp-for="MedicalRecord.PetId" />
    <input type="hidden" asp-for="MedicalRecord.AppointmentId" />

    <div class="form-group">
        <label asp-for="MedicalRecord.Diagnosis">Chẩn đoán</label>
        <textarea asp-for="MedicalRecord.Diagnosis" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="MedicalRecord.FollowUpDate">Ngày tái khám</label>
        <input asp-for="MedicalRecord.FollowUpDate" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MedicalRecord.IsFollow">Cần theo dõi?</label>
        <select asp-for="MedicalRecord.IsFollow" class="form-control">
            <option value="">-- Chọn --</option>
            <option value="true">Có</option>
            <option value="false">Không</option>
        </select>
    </div>

    <hr />
    <h5>Đơn thuốc</h5>

    <div class="row mb-2">
        <div class="col-md-3">
            <select asp-for="PrescriptionItem.MedicationId" class="form-control">
                <option value="">-- Chọn thuốc --</option>
                @foreach (var med in Model.Medications)
                {
                    <option value="@med.MedicationId">@med.Name</option>
                }
            </select>
        </div>
        <div class="col-md-2">
            <input asp-for="PrescriptionItem.Amount" class="form-control" placeholder="Số lượng" />
        </div>
        <div class="col-md-3">
            <input asp-for="PrescriptionItem.Dosage" class="form-control" placeholder="Liều dùng" />
        </div>
        <div class="col-md-3">
            <input asp-for="PrescriptionItem.Instructions" class="form-control" placeholder="Hướng dẫn" />
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Tạo hồ sơ</button>
</form>
