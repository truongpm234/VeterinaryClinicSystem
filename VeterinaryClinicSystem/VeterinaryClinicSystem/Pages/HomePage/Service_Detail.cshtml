@page "{id:int}"
@model VeterinaryClinicSystem.Pages.HomePage.Service_DetailModel
@{
    ViewData["Title"] = "Chi tiết dịch vụ";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="card-title mb-0 text-primary">@Model.Service.Name</h2>               
            </div>

            <p class="mb-2">
                <strong class="text-muted">🔖 Loại dịch vụ:</strong>
                <span class="ms-1">@Model.Service.ServiceType</span>
            </p>

            <p class="mb-2">
                <strong class="text-muted">💰 Giá:</strong>
                <span class="ms-1">@Model.Service.Price?.ToString("N0") VNĐ</span>
            </p>

            <p class="mb-2">
                <strong class="text-muted">📝 Mô tả:</strong>
            </p>
            <div class="bg-light p-3 rounded">
                <p class="mb-0">@Model.Service.Description</p>
            </div>

            <div class="mt-4">
                <a asp-page="/Index" class="btn btn-secondary">⬅️ Quay lại trang chủ</a>
            </div>
        </div>
    </div>
</div>
