@page "{id:int}"
@model VeterinaryClinicSystem.Pages.HomePage.Doctor_DetailModel
@{
    ViewData["Title"] = "Doctor Detail";
}

<div class="container mt-5">
    <div class="card shadow border-0">
        <div class="card-body">
            <div class="row">
                <!-- Avatar và tên bác sĩ -->
                <div class="col-md-4 text-center border-end">
                    <img src="@(!string.IsNullOrEmpty(Model.UserInfo.AvatarUrl) ? Model.UserInfo.AvatarUrl : "/images/background_avatar.png")"
                         class="rounded-circle img-fluid mb-3"
                         style="width: 180px; height: 180px; object-fit: cover;" />

                    <h4 class="fw-bold text-primary">@Model.UserInfo.FullName</h4>
                    <p class="text-muted">
                        <i class="bi bi-envelope-fill me-1"></i> @Model.UserInfo.Email
                    </p>
                </div>

                <!-- Thông tin chuyên môn -->
                <div class="col-md-8">
                    <h5 class="mb-4 fw-semibold text-secondary border-bottom pb-2">🩺 Doctor Information</h5>

                    <p class="mb-3">
                        <strong>🔬 Chuyên môn:</strong><br />
                        <span class="ms-3">@Model.DoctorInfo.Specialty</span>
                    </p>

                    <p class="mb-3">
                        <strong>🎓 Bằng cấp:</strong><br />
                        <span class="ms-3">@Model.DoctorInfo.Degree</span>
                    </p>

                    <p>
                        <strong>📄 Mô tả:</strong><br />
                        <span class="ms-3">@Model.DoctorInfo.Description</span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-end mt-4">
        <a asp-page="/Index" class="btn btn-secondary">
            ⬅️ Quay lại trang chủ
        </a>
    </div>
</div>
