@page "{id:int}"
@model VeterinaryClinicSystem.Pages.HomePage.Doctor_DetailModel
@{
    ViewData["Title"] = "Doctor Detail";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="@(!string.IsNullOrEmpty(Model.UserInfo.AvatarUrl) ? Model.UserInfo.AvatarUrl : "/images/default-avatar.png")"
                 class="rounded-circle img-fluid" style="width: 200px; height: 200px; object-fit: cover;" />
            <h4 class="mt-3">@Model.UserInfo.FullName</h4>
            <p class="text-muted">@Model.UserInfo.Email</p>
        </div>
        <div class="col-md-8">
            <h5 class="mb-3">Thông tin bác sĩ</h5>
            <p><strong>Chuyên môn:</strong> @Model.DoctorInfo.Specialty</p>
            <p><strong>Bằng cấp:</strong> @Model.DoctorInfo.Degree</p>
            <p><strong>Mô tả:</strong> @Model.DoctorInfo.Description</p>
        </div>
    </div>
</div>
