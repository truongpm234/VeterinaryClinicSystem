@page
@model VeterinaryClinicSystem.Pages.Admin.ManagePage.EditServiceModel
<h2>Edit Service</h2>
<form method="post">
    <input type="hidden" asp-for="Service.ServiceId" />
    <div class="form-group">
        <label asp-for="Service.Name"></label>
        <input asp-for="Service.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Service.ServiceType"></label>
        <input asp-for="Service.ServiceType" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Service.Price"></label>
        <input asp-for="Service.Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Service.Description"></label>
        <textarea asp-for="Service.Description" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Save</button>
</form>
