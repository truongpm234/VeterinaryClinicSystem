@page
@model VeterinaryClinicSystem.Pages.Admin.ManagePage.CreateBlogModel
@{
    ViewData["Title"] = "Create New Blog";
}
<h2 class="mb-4">📝 Create New Blog Post</h2>

<form method="post" enctype="multipart/form-data" class="border p-4 rounded shadow-sm">
    <div class="form-group mb-3">
        <label asp-for="Blog.Title" class="form-label">Title</label>
        <input asp-for="Blog.Title" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Blog.Category" class="form-label">Category</label>
        <input asp-for="Blog.Category" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Blog.Content" class="form-label">Content</label>
        <textarea asp-for="Blog.Content" rows="8" class="form-control" placeholder="Support format..."></textarea>
    </div>

    <div class="form-group mb-3">
        <label class="form-label">Upload Cover Image</label>
        <input type="file" name="CoverImage" class="form-control" />
    </div>

    <div class="form-check mb-3">
        <input asp-for="Blog.IsPublished" class="form-check-input" />
        <label asp-for="Blog.IsPublished" class="form-check-label">Publish this post</label>
    </div>

    <button type="submit" class="btn btn-primary">💾 Create</button>
    <a href="/Admin/ManagePage?section=blog" class="btn btn-secondary ms-2">Back</a>
</form>
