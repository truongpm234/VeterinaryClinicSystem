@page
@model VeterinaryClinicSystem.Pages.Admin.ManagePage.EditBlogModel
@{
    ViewData["Title"] = "Edit Blog Post";
}
<style>
    textarea {
        white-space: pre-wrap;
    }
</style>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4 text-center">📝 Edit Blog Post</h2>

            <form method="post" enctype="multipart/form-data" class="shadow p-4 rounded bg-white">
                <input type="hidden" asp-for="Blog.PostId" />

                <div class="mb-3">
                    <label asp-for="Blog.Title" class="form-label fw-semibold">Title</label>
                    <input asp-for="Blog.Title" class="form-control" placeholder="Enter blog title..." />
                </div>

                <div class="mb-3">
                    <label asp-for="Blog.Content" class="form-label fw-semibold">Content</label>
                    <textarea asp-for="Blog.Content" class="form-control" rows="10"
                              placeholder="Write your blog content with formatting..."></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Blog.Category" class="form-label fw-semibold">Category</label>
                    <input asp-for="Blog.Category" class="form-control" placeholder="e.g., Health, Tips, News" />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Upload Cover Image</label>
                    <input type="file" name="CoverImage" class="form-control" />

                    @if (!string.IsNullOrEmpty(Model.Blog.CoverImageUrl))
                    {
                        <div class="mt-3">
                            <label class="form-label text-muted">Current Image:</label><br />
                            <img src="@Model.Blog.CoverImageUrl" style="height: 150px; border-radius: 10px; border: 1px solid #ccc;" />
                        </div>
                    }
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Publish this post?</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Blog.IsPublished" value="true" id="publishYes" />
                        <label class="form-check-label" for="publishYes">✅ Yes</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" asp-for="Blog.IsPublished" value="false" id="publishNo" />
                        <label class="form-check-label" for="publishNo">❌ No</label>
                    </div>
                </div>


                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-success px-4">💾 Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
